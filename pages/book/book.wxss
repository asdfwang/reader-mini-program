/* pages/book/book.wxss */
.book{
  background: url(http://134.175.3.16/vant/miniprogram/timg.png);
  width: 100vw;
  min-height:100vh; 
  display: block;
}
.book .book-container{
  width: 100vw;
  height:100vh;
  display: block;
}
.book .book-container .book-top{
  display: block;
  width: 100vw;
  height: 110rpx;
  background: #FFFFFF;
  border-top: 1px solid #f6f6f6;
  position: fixed;
}
.book .book-container .book-top .top-search{
  width: 85vw;
  float: left;
  border: 1px solid #ddd;
  border-radius: 7rpx;
  margin-top: 23rpx;
  margin-left: 10px;
}
.book .book-container .book-top .top-search input{
  width: 100%;
  font-size: 0.8rem;
  padding-left: 12rpx;
  height: 60rpx;
  
}
.book .book-container .book-top .top-btn{
  float: left;
}
.book .book-container .book-top .top-btn image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin-top: 32rpx;
  margin-left: 10rpx;
}
.book-list-body{
  width: 100vw;
  display: block;
  padding-top: 110rpx;
}
.book-list .book-list-item{
  display: block;
  width: 100vw;
  background: #FFFFFF;
  margin-top: 7px;
  float: left;
}
.item-panel{
  padding: 10px;
}
.item-panel .item-panel-img{
  width: 30%;
  float: left;
}
.item-panel .item-panel-img image{
  width: 100%;
  height: 245rpx;
}
.item-panel .item-panel-info{
  width: 69%;
  float: left;
  margin-top: 20rpx;
}
.item-panel .item-panel-info .info-title rich-text{
  font-size: 1.1rem;
  color: #444;
}
.item-panel .item-panel-info .info-intro{
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #999;
  overflow: hidden;
}
.item-panel .item-panel-info .info-intro text{
  font-size: 0.9rem;
  color: #999;
}
.item-panel .item-panel-info .info-more{
  width: 100%;
  display: block;
  margin-top: 30rpx;
}
.item-panel .item-panel-info .info-more .author{
  width: 49%;
  display: inline-block;
  color: rgb(124, 146, 206);
  font-size: 0.9rem;
}
.item-panel .item-panel-info .info-more  .read{
  width: 49%;
  display: inline-block;
  color: rgb(84, 203, 219);
  font-size: 0.9rem;
  text-align: right;
}