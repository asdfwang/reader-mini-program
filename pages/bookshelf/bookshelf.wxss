/* pages/bookshelf.wxss */
.top{
  width: 100%;
  height: 80rpx;
  color: rgb(237, 240, 243);
  background: rgb(170, 196, 214);
  font-size: 1.1rem;
  text-align: center;
  letter-spacing: 10px;
  line-height: 40px;
  position: fixed;
  font-style: "华文宋体";
  font-weight: 700;
  top:0;
}
.top image{
  float: right;
  position: absolute;
  right:25rpx;
  width:50rpx;
  height: 50rpx;
  top:15rpx;
}
.body{
  background: #F4f4f4;
}
.container{
  width: 100%;
  display: block;
  background: url(http://134.175.3.16/vant/miniprogram/timg.png);
  padding-top: 0rpx;
  padding-bottom: 20rpx;
  min-height: 100vh;
}
.book-list{
  padding-top: 00rpx;
  background: url(http://134.175.3.16/vant/miniprogram/timg.png);
}
.book-list-item{
  width: 27%;
  height: 285rpx;
  display: inline-block;
  margin-left: 2.5%;
  margin-top: 15px;
  background: #fff;
  padding: 5px;
  border-radius: 3px;
}
.book-list-item image{
  width: 100%; 
  height: 225rpx; 
}
.book-list-item rich-text{
  display: block;
  height: 25rpx;
  width: 100%;
  font-size: 0.7rem;
  color:#555;
  text-align: center;
  padding-top: 2px;
}